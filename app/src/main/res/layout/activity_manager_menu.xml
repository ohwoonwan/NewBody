<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerMenu"
    android:orientation="vertical"
    android:background="@drawable/layout_default">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/newbody_logo_foreground" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:background="@drawable/custom_edittext2">
        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관리자 메뉴"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <LinearLayout
            android:id="@+id/memberManage"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_person_24_2"
                android:text="   회원 관리"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right">
                <Button
                    android:id="@+id/member_button"
                    android:layout_marginRight="30dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/next"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/moneyManage"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_attach_money_24"
                android:text="   매출 현황"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right">
                <Button
                    android:id="@+id/sales_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/next"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/satisfactionManage"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/baseline_thumb_up_24"
                android:text="   만족도 관리"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right">
                <Button
                    android:id="@+id/satisfaction_button"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/next"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>